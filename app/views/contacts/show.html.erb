<% page_class 'details-page' %>

<div class="details-page-1">
  <div class="block-1">
    <div class="inner-block">
      <%= render 'layouts/department_logo' %>
    </div>
  </div>

  <div class="block-2">
    <div class="inner-block">
      <div class="article-header">
        <div class="header-div">
          <header class="page-header group">
            <h1>
              <%= contact %> contact details
            </h1>
          </header>

          <%= govspeak contact.description %>
        </div>
        <div class="clear"></div>
      </div>

      <div class="article-container group">
        <article>
          <%= govspeak contact.quick_answer %>
        </article>

        <article role="article" class="group">
          <header>
            <h1>
              1. Before you contact us
            </h1>
          </header>
          <%= govspeak contact.before_you_contact_us %>
        </article>
        <article role="article" class="group">
          <header>
            <h1>
              2. Information you will need
            </h1>
          </header>
          <%= govspeak contact.contact_information.to_s %>
        </article>
        <article role="article" class="group">
          <header>
            <h1>
              3. Contact details
            </h1>
          </header>
          <%= render "contact_details" %>
        </article>
      </div>
    </div>
  </div>
</div>
