<% page_class 'details-page' %>

<header class="page-header group">
  <div>
    <h1>
      <%= contact %> contact details
    </h1>
  </div>
</header>


<div class="related block-1 block-pull-right">
  <div class="inner-block">
    <h3>
      <%= link_to "When can I expect a response to my query?", "http://www.hmrc.gov.uk/tools/progress-tool/index.htm" %>
    </h3>
  </div>
</div>

<div class="block-container contact-intro clearfix">
  <div class="block-1 block-pull-right">
    <div class="inner-block contact-links">
      <ul class="list-plain">
        <% if quick_link_title_1.present? && quick_link_1.present? %>
        <li>
          <%= link_to quick_link_title_1, quick_link_1 %>
        </li>
        <% end %>
        <% if quick_link_title_2.present? && quick_link_2.present? %>
        <li>
          <%= link_to quick_link_title_2, quick_link_2 %>
        </li>
        <% end %>
        <% if quick_link_title_3.present? && quick_link_3.present? %>        
        <li>
          <%= link_to quick_link_title_3, quick_link_3 %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="block-2 block-pull-left">
    <div class="inner-block">
      <div class="group">
        <% if contact.quick_answer.present? %>
          <div class="quick-answer">
            <%= govspeak contact.quick_answer %>
          </div>
        <% else %>
          <ul class="quick-links list-plain clearfix">
            <% if contact.important_link1.present? %>
              <li>
                <% if contact.important_link_title1.present? %>
                  <%= link_to contact.important_link_title1, contact.important_link1 %>
                <% else %>
                  <%= link_to contact.important_link1, contact.important_link1 %>
                <% end %>
                <%= govspeak contact.important_link_description1 %>
              </li>
            <% end %>
            <% if contact.important_link2.present? %>
              <li>
                <% if contact.important_link_title2.present? %>
                  <%= link_to contact.important_link_title2, contact.important_link2 %>
                <% else %>
                  <%= link_to contact.important_link2, contact.important_link2 %>
                <% end %>
                <%= govspeak contact.important_link_description2 %>
              </li>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% if contact.quick_answer.present? %>
  <% if contact.online_transaction_link.present? %>
    <div class="block-container clearfix online-transaction">
      <div class="block-2 block-pull-left">
        <div class="inner-block">
          <div class="group">
            <%= govspeak contact.online_transaction_description %>
          </div>
        </div>
      </div>
      <div class="block-1 block-pull-right">
        <div class="inner-block">
          <div class="group get-started">
            <%= link_to "Start now", contact.online_transaction_link, class: "big button" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
<% if contact.contact_form_links.any? or contact.email_addresses.any? %>
  <div class="block-container block-contact clearfix online-contact">
    <div class="block-1">
      <div class="inner-block">
        <h3>
          Online
        </h3>
      </div>
    </div>
    <div class="block-2">
      <div class="inner-block">
        <% if contact.contact_form_links.any? %>
          <div class="block-container clearfix <%= 'block-container-last' if contact.email_addresses.none? %>">
            <% if contact.email_addresses.any? %>
              <h3>
                Useful links
              </h3>
            <% end %>
            <div class="useful-links <%= 'contact' if contact.email_addresses.any? %>">
              <%= govspeak contact.more_info_contact_form.to_s %>

              <ul class="list-plain">
                <%= render contact.contact_form_links %>
              </ul>
            </div>
          </div>
        <% end %>
        <% if contact.email_addresses.any? %>
          <div class="block-container clearfix block-container-last">
            <% if contact.email_addresses.any? %>
              <h3>
                Email
              </h3>
            <% end %>
            <div class="email <%= 'contact' if contact.contact_form_links.any? %>">
              <%= govspeak contact.more_info_email_address.to_s %>

              <ul class="list-plain">
                <%= render contact.email_addresses %>
              </ul>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<%= render "contact_details" %>