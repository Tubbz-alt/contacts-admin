<% page_class 'details-page' %>

<div class="details-page-1">
  <div class="block-1">
    <div class="inner-block">
      <%= render 'layouts/hmrc_logo' %>
    </div>
  </div>

  <div class="block-2">
    <div class="inner-block">
      <div class="article-header">
        <div class="header-div">
          <header class="page-header group">
            <h1>
              Child Benefit contact details
            </h1>
          </header>

          <p>
            Help and advice for Child Benefit customers
          </p>
        </div>

        <aside>
          <%= link_to "Show all parts of this guide", "#", class:"show-all-parts" %>
          <nav role="navigation" class="page-navigation page-navigation-closed" aria-label="parts to this guide">
            <ol>
              <li>
                <span class="part-number">1.</span>
                <%= link_to "Before you contact us", "#", title:"1. Before you contact us" %>
              </li>
              <li>
                <span class="part-number">2.</span>
                <%= link_to "Information you will need", "#", title:"2. Information you will need" %>
              </li>
              <li class="active">
                <span class="part-number">3.</span>
                <span>Contact details</span>
              </li>
            </ol>
          </nav>
        </aside>
        <div class="clear"></div>
      </div>

      <div class="article-container group">
        <article role="article" class="group">
          <header>
            <h1>
              3. Contact details
            </h1>
          </header>
          <ul class="contact-details-list">
            <li class="contact-detail js-hide-container">
              <h3 class="js-hide-link">
                Online contact forms
              </h3>
              <div class="contact-detail-inner">
                <p>
                  The easiest way to contact us is by filling in the appropriate online contact form:
                </p>
                <ul class="useful-links">
                  <%= render contact.contact_form_links %>

                  <li class='sub-link'>
                    <%= link_to "Show contact form privacy & security Information", "#" %>
                  </li>
                </ul>
              </div>
            </li>
            <li class="contact-detail js-hide-container js-hide">
              <h3 class="js-hide-link">
                Phone numbers
              </h3>
              <div class="contact-detail-inner">
                <div class="application-notice info-notice waiting-times">
                  <p>
                    Call waiting times
                    <br>
                    <strong>
                      15 minutes
                    </strong>
                    <br>
                    at peak times
                  </p>
                </div>
                <p>
                  Consider using alternative communication method.
                </p>
                <%= render contact.phone_numbers %>
              </div>
            </li>
            <li class="contact-detail js-hide-container js-hide">
              <h3 class="js-hide-link">
                Email
              </h3>
              <div class="contact-detail-inner">
                <%= render contact.email_addresses %>
              </div>
            </li>
            <li class="contact-detail js-hide-container js-hide">
              <h3 class="js-hide-link">
                Postal address
              </h3>
              <div class="contact-detail-inner">
                <%= render contact.post_addresses %>
              </div>
            </li>
          </ul>
        </article>
      </div>
    </div>
  </div>
</div>
