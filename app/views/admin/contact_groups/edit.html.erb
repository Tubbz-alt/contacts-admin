<% content_for :page_title, @contact_group.title %>

<ol class="breadcrumb">
  <li><%= link_to 'Contact groups', admin_contact_groups_path  %></li>
  <li class="active"><%= @contact_group.title %></li>
</ol>

<div class="page-header">
  <h1>
    <%= @contact_group.title %>
    <%= link_to 'Delete', admin_contact_group_path(@contact_group), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger pull-right' %>
  </h1>
</div>

<%= render partial: 'form', locals: { contact_group: @contact_group, contact_form_link: @contact_form_link } %>

<% if @contact_group.display_versions.size > 0 %>
<hr />
<h3 class="add-bottom-margin">Audit log</h3>
<table class="table table-striped table-bordered">
  <thead>
    <tr class="table-header">
      <th>Time</th>
      <th>User</th>
      <th>Action</th>
      <th>Changes</th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: 'admin/versions/version', collection: @contact_group.display_versions, as: :version %>
  </tbody>
</table>
<% end %>
