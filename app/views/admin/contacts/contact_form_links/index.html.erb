<%= render 'admin/contacts/edit_contact_header', contact: @contact %>

<h2>Online links</h2>
<% if @contact.contact_form_links.any? %>
  <table class='table table-striped table-hover table-bordered contact-form-links-table'>
    <thead>
      <tr class="table-header">
        <th>Link</th>
        <th>Title</th>
        <th>Description</th>
        <th>
          <%= link_to "Add online link", new_admin_contact_contact_form_link_path(@contact), class: 'btn btn-default pull-right' %>
        </th>
      </tr>
    </thead>
    <tbody>
      <%= render @contact.contact_form_links, contact: @contact %>
    </tbody>
  </table>
<% else %>
  <div class="no-content no-content-bordered">
    <%= link_to "Add link", new_admin_contact_contact_form_link_path(@contact) %>
  </div>
<% end %>

<%= render "more_info_form", contact: @contact %>
