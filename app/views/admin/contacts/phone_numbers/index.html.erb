<%= render 'admin/contacts/edit_contact_header', contact: @contact %>

<h2>Phone numbers</h2>
<% if @contact.phone_numbers.any? %>
  <table class='table table-striped table-hover table-bordered phone-numbers-table'>
    <thead>
      <tr class="table-header">
        <th>Phone Number</th>
        <th>Title</th>
        <th>Description</th>
        <th>Open Hours</th>
        <th>
          <%= link_to "Add phone number", new_admin_contact_phone_number_path(@contact), class: 'btn btn-default pull-right' %>
        </th>
      </tr>
    </thead>
    <tbody>
      <%= render @contact.phone_numbers, contact: @contact %>
    </tbody>
  </table>
<% else %>
  <div class="no-content no-content-bordered">
    <%= link_to "Add phone number", new_admin_contact_phone_number_path(@contact) %>
  </div>
<% end %>

<%= render "more_info_form", contact: @contact %>
