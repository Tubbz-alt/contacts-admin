<%= render 'admin/shared/formatting' %>

<div class="well">
  <%= simple_form_for [:admin, contact] do |f| %>
    <%= hidden_field_tag :tab, 'phone_numbers' %>
    <fieldset>
      <legend class="add-bottom-margin">Further information for Phone Number contact method</legend>
      <%= f.input :more_info_phone_number,
                  label: "More informaiton for phone numbers",
                  placeholder: "This appears below phone method",
                  input_html: { rows: 5, class: "input-md-8 form-control" },
                  hint: formatting_help_link %>
      <%= f.submit "Update information", class: "btn btn-success" %>
    </fieldset>
  <% end %>
</div>
