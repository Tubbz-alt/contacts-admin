<%= render 'admin/contacts/edit_contact_header', contact: @contact %>

<h2>Postal addresses</h2>
<% if @contact.post_addresses.any? %>
  <table class='table table-striped table-hover table-bordered post-addresses-table'>
    <thead>
      <tr class="table-header">
        <th>Address</th>
        <th>Description</th>
        <th>
          <%= link_to "Add Post Address", new_admin_contact_post_address_path(@contact), class: 'btn btn-default pull-right' %>
        </th>
      </tr>
    </thead>
    <tbody>
      <%= render @contact.post_addresses, contact: @contact %>
    </tbody>
  </table>
<% else %>
  <div class="no-content no-content-bordered">
    <%= link_to "Add postal address", new_admin_contact_post_address_path(@contact) %>
  </div>
<% end %>

<%= render "more_info_form", contact: @contact %>
