<% content_for :page_title, 'Edit postal address' %>
<ol class="breadcrumb">
  <li><%= link_to 'Contacts', admin_contacts_path  %></li>
  <li><%= link_to @contact, edit_admin_contact_path(@contact) %></li>
  <li><%= link_to 'Postal addresses', admin_contact_post_addresses_path(@contact) %></li>
  <li class="active"><%= @post_address.title %></li>
</ol>

<div class="page-title">
  <h1>
    <small><%= @contact %></small><br />
    <%= @post_address.title %>
  </h1>
</div>

<%= render 'form', contact: @contact, post_address: @post_address, show_delete: true %>

<h3 class="add-bottom-margin">Audit log</h3>
<table class="table table-striped table-bordered">
  <thead>
    <tr class="table-header">
      <th>Time</th>
      <th>User</th>
      <th>Action</th>
      <th>Changes</th>
    </tr>
  </thead>
  <%= render partial: 'admin/versions/version', collection: @post_address.display_versions, as: :version %>
</table>
