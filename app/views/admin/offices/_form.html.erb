<%= simple_form_for [:admin, office] do |f| %>
  <fieldset class="form-horizontal">
    <%= f.input :title %>
    <%= f.association :contact, include_blank: false, input_html: { class: 'js-chosen-select' } %>
    <%= f.association :department, collection: Department.all, include_blank: false, input_html: { class: 'js-chosen-select' } %>
  </fieldset>

  <div class='form-actions'>
    <%= f.submit id: 'office-submit', class: 'btn btn-small btn-primary', data: { disable_with: 'Working' } %>
  </div>
<% end %>
