<% page_class 'landing-page' %>

<div class="block-1">
  <div class="inner-block">
    <%= render 'layouts/hmrc_logo' %>
  </div>
</div>

<div class="block-2">
  <div class="inner-block">
    <div class="hmrc-search">
      <header class="page-header">
        <h1 class="main">
          Search for relevant HMRC contact information
        </h1>
      </header>
      <p>
        Please enter a question you want to ask HMRC or type what you would like to do.
      </p>
      <form>
        <div class="searchfield">
          <fieldset class="search-input">
            <input type="search" name="q" value="" id="search-main">
          </fieldset>
          <fieldset class="search-submit">
            <button type="submit" class="button">Search</button>
          </fieldset>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="clear"></div>

<div class="block" id="commonly-asked-questions">
  <div class="inner-block">
    <h2 class="section-divider">
      Browse by most commonly asked questions about

      <select class="js-chosen-select">
        <optgroup label="Most popular">
          <option value="#commonly-asked-<%= 'Change of details'.parameterize %>">
            Change of details
          </option>
          <option value="#commonly-asked-<%= 'Tax Credits'.parameterize %>">
            Tax Credits
          </option>
          <option>
            VAT
          </option>
          <option>
            Employers
          </option>
          <option>
            Income Tax
          </option>
          <option>
            Self Assessment
          </option>
        <optgroup label="For individuals">
          <option>
            National Insurance
          </option>
          <option>
            Child Benefit
          </option>
          <option>
            Corporation Tax
          </option>
          <option>
            Construction Industry Scheme (CIS)
          </option>
          <option>
            Self Employed
          </option>
          <option>
            Charities &amp; clubs
          </option>
          <option>
            Bereavement
          </option>
        </optgroup>
      </select>
    </h2>

    <ul class="common-sections common-sections-active" id="commonly-asked-change-of-details">
      <li>
        <%= link_to "I have made a new Tax Credit claim, when will I get my first payment?", "#" %>
      </li>
      <li>
        <%= link_to "How do I renew my Tax Credit claim?", "#" %>
      </li>
      <li>
        <%= link_to "How do I let the Tax Credit Office know about a change of circumstances?", "#" %>
      </li>
      <li class="search-more">
        <%= link_to "Or search by tax area", "#" %>
      </li>
    </ul>

    <ul class="common-sections" id="commonly-asked-tax-credits">
      <li>
        <%= link_to "I have made a new Tax Credit claim, when will I get my first payment?", "#" %>
      </li>
      <li>
        <%= link_to "How do I renew my Tax Credit claim?", "#" %>
      </li>
      <li>
        <%= link_to "How do I find out my next tax credits payment dates?", "#" %>
      </li>
      <li>
        <%= link_to "Do I get Child Tax Credit when my child turns 16?", "#" %>
      </li>
      <li>
        <%= link_to "Can you tell me why you have overpaid me?", "#" %>
      </li>
      <li>
        <%= link_to "Am I eligible for tax credits?", "#" %>
      </li>
      <li>
        <%= link_to "How do I let the Tax Credit Office know about a change of circumstances?", "#" %>
      </li>
      <li class="search-more">
        <%= link_to "Or search by tax area", "#" %>
      </li>
    </ul>
  </div>
</div>